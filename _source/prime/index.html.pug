extends _html
block append vars
  - path   = 'index.html'
  - title  = `Prime`
block nav
  //- none
block content
  h1 !{title}
  - sub = layout
  nav.mv
    b Html
    +angle
    +sna(sub+"/preview.html")| Preview
    +bull
    +sna(sub+"/test.html")| Test
    +bull
    +sna(sub+"/home.html")| Home
    +bull
    +sna(sub+"/page.html")| Page
    +bull
    +sna(sub+"/404.html")| 404
  - sub = layout+'/md'
  nav.mv
    b Markdown
    +angle
    +sna(sub+"/preview.html")| Preview
    +bull
    +sna(sub+"/home.html")| Home
    +bull
    +sna(sub+"/page.html")| Page
    +bull
    +sna(sub+"/404.html")| 404