extends /_source/_layouts/prime
block append vars
  - path   = 'index.html'
  - title  = `Index`
block prepend html
  +---.
    title: 'Home'
block footer
  +thin_hr
  +site_footer
  +thin_hr
  p.text-right.text-grey: small: +edit_link(path)
block append style
  style.
    ._footer { margin-top:1rem !important }
    h1.hero { font-family: 'Arial',system-ui,sans-serif }
    article #pages_ ul,
    article #posts_ ul,
    article .rapat { margin:1rem 0;padding-left: 0;list-style: inside }
    article #pages_ ul li,
    article #posts_ ul li,
    article .rapat li { margin-left:0 }
block header
  h1 üïäÔ∏è !{description}
block nav
  p(style="margin:1rem 0")
    b| Home
    +_bull_
    +_a([base_url,'pages'].join('/'))| Pages
    +_bull_
    +_a([base_url,'posts'].join('/'))| Posts
    +_bull_
    +_a([base_url,'vars'].join('/'))| Variables
  +thin_hr
block content
  .flex(style="gap:3rem;margin:1rem auto 1rem auto")
    .f(style="min-width:350px")
      h3.mt-0 Markdown
      nav: ul.rapat
        li: +site_nav('core')
        li: +site_nav('mallet')
        li: +site_nav('nova')
        li: +site_nav('prime')
    .f(style="min-width:350px")
      h3.mt-0 Html
      nav: ul.rapat
        li: +site_nav('core')
        li: +site_nav('mallet')
        li: +site_nav('nova')
        li: +site_nav('prime')
  +thin_hr
  +capture('pages')| {% include pages.md %}
  +capture('posts')| {% include posts.md %}
  .flex(style="gap:3rem;margin:1rem auto 1rem auto")
    #pages_(style="min-width:150px")
      h3.mt-0 Pages
      !='{{ pages | markdownify }}'
    #posts_(style="min-width:150px")
      h3.mt-0 Posts
      !='{{ posts | markdownify }}'
  +thin_hr
  h3 Configurations
  +capture('config')| {% include_relative config.md %}
  !='{{ config | markdownify }}'
