block append vars
  - path   = 'index.html'
  - title  = `Index`
block prepend html
  +---.
    title: 'Home'
block footer
  +thin_hr
  p: +site_footer
  +thin_hr
  p.text-right.text-grey: small: +edit_link(path)
block append style
  style.
    ._logo,
    ._nav { display:none !important }
    h1.hero { font-family: 'Arial',system-ui,sans-serif }
block content
  h1.hero üïäÔ∏è !{description}
  pre.scrollable.highlight(style="max-height:213px").
    #[b.text-gray # _config.pug]
    version      : !{version}
    revision     : !{revision}
    title        : !{site_title}
    description  : !{site_description}
    author       : !{author}
    year         : !{year}
    base_url     : !{base_url}
    home_url     : !{home_url}

    lang         : !{lang}
    theme_color  : !{theme_color}
