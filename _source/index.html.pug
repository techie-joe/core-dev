extends /_source/_layouts/prime
block append style
  style.
    ._nav { display:none !important }
block footer
  +thin_hr
  p: +site_footer
  +thin_hr
  p.text-right.text-grey: small: +edit_link(path)
//- --------------------------------------------------------------
block append vars
  - path   = 'index.html'
  - title  = `Index`
block append style
  style.
    h1.hero { font-family: 'Arial',system-ui,sans-serif }
block content
  h1.hero üïäÔ∏è !{description}
  pre.scrollable.highlight.
    #[b.text-gray # _config.pug]
    site_title           : !{site_title}
    site_description     : !{site_description}
    site_url             : #[a._no_u(href=site_url)|!{site_url}]
    home_url             : #[a._no_u(href=home_url)|!{home_url}]
    source_url           : #[a._no_u(href=source_url target="_edit") !{source_url}]
