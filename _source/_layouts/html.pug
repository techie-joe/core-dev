include _dove
block vars
  -
    layout_name = 'html'
    htmlClass = [`_${layout_name}_layout`,'no_js']
    bodyClass = []
block update_vars
+front_matter
  block front_matter
    +l
    .
      layout: html
      use_pug: true
      title: !{title}
      description: !{description}
    //- 
block html
  doctype html
  html(lang=lang||'en-US' class=htmlClass.join(' '))
    +l|<!-- path   : !{path} -->
    +l|<!-- layout : _source/_layouts/!{layout_name} -->
    head
      block head
        meta(charset=charset||'utf-8')/
        +l|{% seo %}
        meta(name="viewport" content="width=device-width,initial-scale=1")/
        meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")/
        meta#_color_scheme(name="color-scheme" content=color_scheme||'')/
        meta#_theme_color(name="theme-color" content=theme_color||'')/
        style.
          .isvg svg { width:1em;height:1em }
        block style
        +l|{% include layout_head.html %}
        +l|<!--[if lt IE 9]><script src="https://unpkg.com/html5shiv@3.7.3/dist/html5shiv.min.js"></script><![endif]-->
    body
      block body
        ._views
          ._view: ._layout: +main_view
          ._view: ._layout: +l|{% include theme_switch.html %}
          +l|{% include layout_body.html %}
        //- ._views