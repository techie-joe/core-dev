include _dove
block vars
  -
    layout = 'mallet'
    htmlClass = ['_mallet_layout']
    bodyClass = []
    mainClass = []
block update_vars
+front_matter
  block front_matter
    .
      layout: html
      use_pug: true
      title: !{title}
      description: !{description}
block html
  doctype html
  html(lang=lang||'en-US' class=htmlClass.join(' '))
    +l|<!-- path   : !{path} -->
    +l|<!-- layout : dove/_source/_layouts/!{layout} -->
    head
      meta(charset=charset||'utf-8')/
      +l|{% seo %}
      meta(name="viewport" content="width=device-width,initial-scale=1")/
      meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")/
      meta#_color_scheme(name="color-scheme" content=color_scheme||'')/
      meta#_theme_color(name="theme-color" content=theme_color||'')/
      block style
        link#_style(rel="stylesheet" href!=`{{ site.base_url }}/assets/${layout}/css/style.css?r={{ site.revision | default: '0' }}.{{ site.github.build_revision | default: '0' }}`)/
      +l|{% include layout_head.html %}
      +l|<!--[if lt IE 9]><script src="https://unpkg.com/html5shiv@3.7.3/dist/html5shiv.min.js"></script><![endif]-->
    body
      ._views
        ._view._app.__fadein
          ._view_layout.container-lg.px-3.markdown-body
            header.header
              block header
                //- p: code // header
                +logo
            nav._nav
              block nav
                p: code // nav
            main._main: article._article
              block content
                h1 !{title}
                p: code // content for : !{title}
            footer._footer
              block footer
                hr/
                p: code // footer
                hr/
                p.text-right.text-grey: small: +edit_link(path)
          //- .container
        ._view: +l|{% include theme_switch.html %}
        +l|{% include layout_body.html %}
      //- ._views