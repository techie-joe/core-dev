include _dove
block vars
  -
    layout = 'prime'
    htmlClass = ['_prime_layout']
    bodyClass = []
    mainClass = []
block update_vars
+---
  block front_matter
block html
  doctype html
  html(lang=lang||'en-US' class=htmlClass.join(' '))
    |<!-- path   : !{path} -->
    |<!-- layout : dove/_source/_layouts/!{layout} -->
    head
      meta(charset=charset||'utf-8')/
      !='{% seo %}'
      meta(name="viewport" content="width=device-width,initial-scale=1")/
      meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")/
      meta#_color_scheme(name="color-scheme" content=color_scheme||'')/
      meta#_theme_color(name="theme-color" content=theme_color||'')/
      block style
        link#_style(rel="stylesheet" href!=`{{ site.base_url }}/assets/prime/css/style.css?r={{ site.revision | default: '0' }}.{{ site.github.build_revision | default: '0' }}`)/
      !='{% include layout_head.html %}'
      |<!--[if lt IE 9]><script src="https://unpkg.com/html5shiv@3.7.3/dist/html5shiv.min.js"></script><![endif]-->
    body
      ._views
        ._view: ._layout._1200
          .container-lg.px-3.my-5.markdown-body
            header._header: ._layout
              block header
                h1!='{% include logo.html %}'
                //- p: code // header
            nav._nav: ._layout
              block nav
                +thin_hr
                //- p: code // nav
            main._main: article._article: ._layout
              block content
                h1 !{title}
                p: code // content for : !{title}
            footer._footer.footer.mt-5: ._layout
              block footer
                +thin_hr
                p.text-right.text-grey: small: +edit_link(path)
                //- p: code // footer
          //- .container
        ._view: ._layout._1200!='{% include theme_switch.html %}'
        !='{% include layout_body.html %}'
      //- ._views