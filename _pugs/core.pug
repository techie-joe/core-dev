include main
block vars
  -
    layout = 'core'
    htmlClass = ['_core_layout']
    bodyClass = []
    mainClass = []
doctype html
html(lang=lang||'en-US' class=htmlClass.join(' '))
  |<!-- page.path   : !{path} -->
  |<!-- page.layout : pug/!{layout} -->
  head
    meta(charset=charset||'utf-8')/
    |<!-- Begin Jekyll SEO tag v2.8.0 -->
    title !{title||'(untitled)'}!{site_title?' | '+site_title:''}
    |<!-- End Jekyll SEO tag -->
    meta(name="viewport" content="width=device-width,initial-scale=1")/
    meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")/
    meta#_color_scheme(name="color-scheme" content=color_scheme||'')/
    meta#_theme_color(name="theme-color" content=theme_color||'')/
    link#_style(rel="stylesheet" href!=site_url+"/assets/core/css/style.css?v=!{version}")/
    |<!-- custom-head -->
    //- -
      fonts = [
        'https://fonts.googleapis.com/css2?',
        [
          'family=Roboto:ital,wght@0,100..900;1,100..900',
          //- 'family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700',
          //- 'family=Courier+Prime:ital,wght@0,400;0,700;1,400;1,700',
          'family=Source+Code+Pro:ital,wght@0,400;0,700;1,400;1,700',
        ].join('&'),
        'display=swap'
      ].join('&');
      link(rel="preconnect" href="https://fonts.googleapis.com")/
      link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)/
      link(rel="stylesheet" href=fonts)#_fonts/
    //- icons
      //- : prioritization sequence: first match, exact-size, type, then "any".
      link(rel="apple-touch-icon" type="image/png"     sizes="180x180" href=appendVersion(homeUri+"icons/apple-touch-icon.png"))/
      link(rel="icon"             type="image/png"     sizes="32x32"   href=appendVersion(homeUri+"icons/favicon-32x32.png"))/
      link(rel="icon"             type="image/png"     sizes="16x16"   href=appendVersion(homeUri+"icons/favicon-16x16.png"))/
      link(rel="icon"             type="image/x-icon"  sizes="any"     href=appendVersion(homeUri+"icons/favicon.ico"))/
    //- manifest - enable if you're building a PWA Apps
    if INCLUDE_MANIFEST
      link(rel="manifest" href!=site_url+"/manifest.json")/
    |<!--[if lt IE 9]><script src="https://unpkg.com/html5shiv@3.7.3/dist/html5shiv.min.js"></script><![endif]-->
    block style
  body
    ._views: ._view
      header._header: ._layout: block header
        code // header
      nav._nav: ._layout: block nav
        code // nav
      main._main: article._article._layout: block content
        code // content
      footer._footer: ._layout: block footer
        code // footer
    +credit
    +themejs
    +anchor
    |<!-- custom-body -->