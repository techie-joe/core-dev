include main
mixin thin_hr
  hr.thin.border-gray-light/
block vars
  -
    color_scheme = 'light'
  -
    layout = 'prime'
    htmlClass = ['_prime_layout']
    bodyClass = []
    mainClass = []
block update_vars
block html
  doctype html
  html(lang=lang||'en-US' class=htmlClass.join(' '))
    |<!-- path   : !{path} -->
    |<!-- layout : pugs/!{layout} -->
    head
      meta(charset=charset||'utf-8')/
      |<!-- Begin Jekyll SEO tag v2.8.0 -->
      title !{title||'(untitled)'}!{site_title?' | '+site_title:''}
      |<!-- End Jekyll SEO tag -->
      meta(name="viewport" content="width=device-width,initial-scale=1")/
      meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")/
      meta#_color_scheme(name="color-scheme" content=color_scheme||'')/
      meta#_theme_color(name="theme-color" content=theme_color||'')/
      block style
        link#_style_prime(rel="stylesheet" href!=`${site_url}/assets/prime/css/style.css?v=${version}`)/
      block custom_head
        +custom_head
      |<!--[if lt IE 9]><script src="https://unpkg.com/html5shiv@3.7.3/dist/html5shiv.min.js"></script><![endif]-->
    body
      ._views
        ._view: ._layout._1020
          .container-lg.px-3.my-5.markdown-body
            block header
              //- p: code // header
              h1._logo: a(href=home_url) #{site_title}
            nav._nav: ._layout
              block nav
                p: code // nav
              +thin_hr
            main._main: article._article._layout
              block content
                h1 !{title}
                p: code // content for : !{title}
            footer._footer: ._layout.footer.border-top.border-gray-light.mt-5.pt-3.text-right.text-gray
              block footer
                p: code // footer
              p: small This site is open source. #[+edit_link(path)].
          //- .container-lg
        ._view: ._layout._1020
          +theme_switch
      //- ._views
      block custom_body
        +custom_body