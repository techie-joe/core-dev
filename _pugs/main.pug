include mixins

mixin fonts
  if fonts
    link(rel="preconnect" href="https://fonts.googleapis.com")/
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)/
    link(rel="stylesheet" href="https://fonts.googleapis.com/css2?"+fonts.join('&'))#_fonts/

mixin icons
  //- : prioritization sequence: first match, exact-size, type, then "any".
  link(rel="apple-touch-icon" type="image/png"     sizes="180x180" href=site_url+"/icons/apple-touch-icon.png")/
  link(rel="icon"             type="image/png"     sizes="32x32"   href=site_url+"/icons/favicon-32x32.png")/
  link(rel="icon"             type="image/png"     sizes="16x16"   href=site_url+"/icons/favicon-16x16.png")/
  link(rel="shortcut icon"    type="image/x-icon"  sizes="any"     href=site_url+"/icons/favicon.ico")/

mixin manifest
  //- enable manifest if you're building a PWA Apps
  link(rel="manifest" href!=`${site_url}/manifest.json?v=${version}`)/

mixin logo
  ._logo: block logo
    if !isHome
      a(href=home_url) #{site_title}

mixin nav
  +_a("home.html")| Home
  +_a("page.html")| Page
  +_a("demo-old.html")| Old
  +_a("demo-new.html")| New

mixin credit
  ._credit: block credit
    a._credit_link(href='https://techie-joe.github.io/core' title="Go to the Core")| âœ¨ Made with Core

mixin theme_switch(title='Change Theme (Alt+T)')
  ._theme_switch._needjs: a(href='#' onclick!=onclick(js.themeChange) title=title): block theme_switch
    +isvg(svgi.compare)

mixin themejs(ghost=[ "localhost", "techie-joe.github.io" ])
  script|window.ghost='!{btoa(ghost)}';
  +js(`${site_url}/assets/themejs/themejs_v2.0.js?v=${version}`)

mixin anchor
  script(src="https://cdnjs.cloudflare.com/ajax/libs/anchor-js/4.1.0/anchor.min.js" integrity="sha256-lZaRhKri35AyJSypXXs4o6OPFTbTmUoltBbDCbdzegg=" crossorigin="anonymous")
  script.
    anchors?.add();

mixin google_analytics
  if google_analytics
    script(async src="https://www.googletagmanager.com/gtag/js?id="+google_analytics)
    script.
      window.dataLayer=window.dataLayer||[];
      function gtag(){window.dataLayer.push(arguments);}
      gtag('js',new Date());
      gtag('config','!{ google_analytics }');

mixin fouc
  style.
    ._fouc { visibility: hidden !important }
  script.
    ((d=document,q=(d.documentElement||d.body).classList,c='_fouc',x='_tx')=>{
      q.add(c,x);d.addEventListener('DOMContentLoaded',e=>{
        setTimeout(e=>{q.remove(c);q.remove(x)},300);
      });
    })();